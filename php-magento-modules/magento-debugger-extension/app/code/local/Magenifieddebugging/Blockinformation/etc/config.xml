<?xml version="1.0" ?>
<config>
    <global>
        <blocks>
            <mmdebugging_blockinformation>
                <class>Magenifieddebugging_Blockinformation_Block</class>
            </mmdebugging_blockinformation>
        </blocks>
        <models>
            <mmdebugging_blockinformation>
                <class>Magenifieddebugging_Blockinformation_Model</class>
            </mmdebugging_blockinformation>
            <mmdebugging_blockinformation_router>
                <class>Magenifieddebugging_Blockinformation_Router</class>
            </mmdebugging_blockinformation_router>
            <mmdebugging_blockinformation_form>
                <class>Magenifieddebugging_Blockinformation_Form</class>
            </mmdebugging_blockinformation_form>
            <mmdebugging_blockinformation_service>
                <class>Magenifieddebugging_Blockinformation_Service</class>
            </mmdebugging_blockinformation_service>
        </models>
        <helpers>
            <mmdebugging_blockinformation>
                <class>Magenifieddebugging_Blockinformation_Helper</class>
            </mmdebugging_blockinformation>
        </helpers>
    </global>
    <frontend>
        <events>
            <controller_action_predispatch>
                <observers>
                    <determine_form_submitted>
                        <class>mmdebugging_blockinformation/observer</class>
                        <method>determineSubmittedForm</method>
                    </determine_form_submitted>
                </observers>
            </controller_action_predispatch>
            <core_block_abstract_to_html_after>
                <observers>
                    <determine_if_block_contains_search_text>
                        <class>mmdebugging_blockinformation/observer</class>
                        <method>determineIfBlockContainsSearchText</method>
                    </determine_if_block_contains_search_text>
                    <process_debugging_form>
                        <class>mmdebugging_blockinformation/observer</class>
                        <method>processDebuggingForm</method>
                    </process_debugging_form>
                </observers>
            </core_block_abstract_to_html_after>
        </events>
        <layout>
            <updates>
                <mmdebugging_blockinformation>
                    <file>magemagenified/debugging/blockinformation.xml</file>
                </mmdebugging_blockinformation>
            </updates>
        </layout>
    </frontend>
</config>